/*--------------------------------------------------------------------
*
* VARIABLES 
*
--------------------------------------------------------------------*/

$font-family-soleil        = "soleil", proxima nova, helvetica, arial, sans-serif
$font-family-acumin        = "acumin-pro", proxima nova, helvetica, arial, sans-serif

$font-family-sans-fallback = proxima nova, helvetica, arial, sans-serif

$font-weight-regular       = 400
$font-weight-bold          = 700

$font-size-h1              = 4rem // 64px
$font-size-h2              = 1.25rem // 20px
$font-size-h3              = 1rem // 16px

$font-size-h1-mobile       = 2.25rem // 30px

$font-size-sm              = 0.875rem // 14px
$font-size-base            = 1.125rem // 16px
$font-size-lg              = 1.5rem // 24px

$line-height-base          = 1.8
$line-height-headings      = 1.25


$spacing                   = 30px
$spacing-lg                = 2 * $spacing // 60px
$spacing-sm                = 0.5 * $spacing // 15px
$spacing-xs                = 0.2 * $spacing // 6px

$gray                      = #444
$gray-light                = lighten($gray, 20%)
$gray-lighter              = lighten($gray, 95%)

$blue                      = #343B99
$yellow                    = #FCFF88
$cream                     = #F9F3CF

