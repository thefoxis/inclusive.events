/*--------------------------------------------------------------------
*
* TYPE 
*
--------------------------------------------------------------------*/

.wf-loading body
  font-family: $font-family-sans-fallback

.wf-loading 
  h1, h2, h3, h4, h5
    font-family: $font-family-serif-fallback

.wf-active body
  font-family: $font-family-dagny

.wf-active
  h1, h2, h3, h4, h5 
    font-family: $font-family-meta-serif
    
h1, h2, h3, h4, h5 
  line-height: $line-height-headings
  
body
  font-size: $font-size-base
  line-height: $line-height-base
  
h1
  font-size: $font-size-h1
  
h2
  font-size: $font-size-h2
  
h3
  font-size: $font-size-h3
  
.txt-up
  text-transform: uppercase
  
.txt-left
  text-align: left
  
.txt-right
  text-align: right
  
.txt-center
  text-align: center
  
.txt-sm
  font-size: $font-size-sm
  
.txt-lg
  font-size: $font-size-lg
  